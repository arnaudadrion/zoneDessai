{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row row-cols-3">
        {% for feature in features %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ feature.title }}</h5>
                    <p class="card-text">{{ feature.content }}</p>

                    {% if feature.parameters %}
                        {% set url = path(feature.link, feature.parameters) %}
                    {% else %}
                        {% set url = path(feature.link) %}
                    {% endif %}

                    <a href="{{ url }}" class="btn btn-primary">Aller voir</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}